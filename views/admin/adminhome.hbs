<script>
    document.addEventListener("DOMContentLoaded", charts, false)

    async function charts() {
        const res = await axios.get('/admin/revenueChart').then((e) => {
            console.log(e.data.orders +"biihih")

            var result = [];
            e.data.orders.reduce(function (acc, curr) {
                if (!acc[curr.orderdDate.slice(0, 10)]) {
                    acc[curr.orderdDate.slice(0, 10)] = { orderdDate: curr.orderdDate.slice(0, 10), totalPrice: 0 };
                    result.push(acc[curr.orderdDate.slice(0, 10)])
                }
                acc[curr.orderdDate.slice(0, 10)].totalPrice += parseInt(curr.totalPrice)

                return acc
            }, {});

            console.log(result)

            var xValues = [];
            var yValues = [];

            result.map((curr) => {
                xValues.unshift(curr.orderdDate)
                yValues.unshift(parseInt(curr.totalPrice))

            })


            console.log(xValues, yValues)

            new Chart("myChart", {
                type: "bar",
                data: {
                    labels: xValues,
                    datasets: [{
                        fill: false,
                        lineTension: 0,
                        backgroundColor: "#696CFF",
                        borderColor: "#696CFF",
                        data: yValues
                    }
                    ]
                },
                options: {
                    legend: { display: false },
                    scales: {
                        yAxes: [{ ticks: { min: 100, max: 500000 } }],
                    }
                }
            });


        })
    }

</script>


