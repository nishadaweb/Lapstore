<section>
  <div class=" container row justify-content-center m-auto">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Edit Product</h2>
      
    
        
     <form id="editproduct" action="/admin/edit-product" method="post" enctype="multipart/form-data">
      


        <input type="text" name="id" class="invisible" value="{{products._id}}" id="id"><br>
        <label for="productname">Product Name</label>
        
        <input type="text" name="productname" class="form-control" value="{{products.productname}}">

        <label for="productdescription">Product Description</label>
        <input type="text" name="productdescription" class="form-control" value="{{products.productdescription}}">
        <label for="">Product Image</label>
        <input type="file" name="productimage" class="form-control" ><br>
        <label for="">Product Image</label>
        <input type="file" name="productimage" class="form-control" ><br>
        <label for="">Product Image</label>
        <input type="file" name="productimage" class="form-control" ><br>
        <label for="">Product Image</label>
        <input type="file" name="productimage" class="form-control" ><br>
        <label for="productprice">Product Price</label>
        <input type="text" name="productprice" class="form-control" value="{{products.productprice}}">
         <label for="productcategory">Product Category</label>
        <select type="select" name="productcategory" class="form-control" >
          {{#each categories}}
          <option value="{{this.categoryname}}">{{this.categoryname}}</option>
          {{/each}}
        </select>
       {{!-- <label for="productcategory">Product Category</label> --}}
        {{!-- <input type="text" name="productcategory" class="form-control" value="{{products.productcategory}}"> --}}


        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>

<script>

  $("#editproduct").validate({
    errorClass:"validerror",
    rules: {
      productname: {
        required: true
        
      },
      productdescription: {
        required: true
      },
      productimage:{
        required:true
    },
    productprice:{
      required:true
    }
    productprice:{
      required:true
    }
    productcategory:{
      required:true
    }
    }
  });
</script>
