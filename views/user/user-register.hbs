
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="stylesheets/login.css">
<!------ Include the above in your HEAD tag ---------->

<body>
    <div id="login">
        
        <div class="container">
          <h3 class="text-center pt-3"><img src="/user-assets/img/Capture.PNG" style="margin-left:60px" alt=""></h3>
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-5">
                    <div id="login-box" class="col-md-3 mb-2">
                        <form id="usersignup" class="form" action="/register" method="post">
                            {{!-- <h3 class="text-center text-dark">Login</h3> --}}
                             {{#if signupErr}}
          
          <script>
            Swal.fire({
  text: 'User already exist',
  target: '#custom-target',
  customClass: {
    container: 'position-absolute'
  },
  toast: true,
  position: 'top-right'
})
          </script>
          {{/if}}
          <div class="row">
                <div class="col-auto mx-auto">
                  <h3 class="text-dark">Signup</h3>
                </div>
              </div>




                            <div class="form-group " style="margin-bottom:0px">
                                <label for="username" class="text-dark">Firstname:</label><br>
                                <input type="text" name="fname" id="fname" class="form-control">
                            </div>
                            <input type="text"  name="status" class="form-control form-control-lg"
                             style="height: 30px;" hidden value="false">
                            <div class="form-group" style="margin-bottom:0px">
                                <label for="username" class="text-dark">Lastname:</label><br>
                                <input type="text" name="lname" id="lname" class="form-control">
                            </div>
                            <div class="form-group" style="margin-bottom:0px">
                                <label for="username" class="text-dark">Email Address:</label>
                                <input type="text" name="email" id="email" class="form-control">
                            </div>
                            <div class="form-group" style="margin-bottom:0px">
                                <label for="mobile" class="text-dark">Mobile Number:</label>
                                <input type="text" name="mobile" id="mobile" class="form-control">
                            </div>
                            <div class="form-group" style="margin-bottom:0px">
                                <label for="password" class="text-dark">Password:</label>
                                <input type="password" name="password" id="password" class="form-control">
                            </div>
                             <div class="form-group" style="margin-bottom:0px">
                                <label for="password" class="text-dark">Confirm Password:</label>
                                <input type="password" name="confirmPassword" id="confirmpassword" class="form-control">
                            </div>
                            <div class="form-group" >
                                <label for="remember-me" class="text-dark"><span></span>
                               
                                <input type="submit" name="submit" class="btn btn-danger btn-md mt-2" value="Register">
                            </div>
                            <div class="d-flex">
                            <h6>Already have an account</h6>
                            {{!-- <div id="register-link" class="text-right"> --}}
                             
                                <a href="/login" class="text-dark pl-5">Log in</a>
                                </div>
                            {{!-- </div> --}}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>

<script>

  $("#usersignup").validate({
    errorClass: "validerror",
    rules: {

      fname: {
        required: true

      },
      lname: {
        required: true

      },
      email: {
        required: true,
        email: true

      },
      mobile: {
        required: true,
        minlength: 10,
        maxlength: 10
      },
      password: {
        required: true,
        minlength: 6
      },


      confirmPassword: {
        required: true,
        minlength: 6,
        equalTo: "#password"
      }

    }
  });



</script>
</body>




























