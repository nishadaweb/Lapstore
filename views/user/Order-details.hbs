<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row" >

			<div class="col-md-7" >
				<!-- Billing Details -->
				<div class="billing-details">

					{{#each order.orderItems}}
					<div class="col-md-4 mb-3  p-0 " style="margin-left: 50px;">

						<div class="row">

							<div class="product">

								<div class="product-img">
									<img src="/images/productimg/{{this.product.productimage.[0]}}" alt="">

								</div>
								<div class="product-body" >

									<h3 class="product-name"><a href="#">{{this.product.productname}}</a></h3>
									
									<h4 class="product-price">Rs:{{this.product.productprice}} <del
											class="product-old-price"></del></h4>
									<h6 class="tooltipp">Quantity-{{this.quantity}}</h6>



								</div>


							</div>

						</div>

					</div>
					{{/each}}


				</div>


			</div>


			<!-- /Order Details -->

			<!-- /row -->
			<div class="col-md-5 order-details">
				<div class="section-title text-center">
					<h3 class="title">Order Details</h3>
				</div>
				<div class="order-summary">
					
						<div class="order-col" id="couponDiscount">
							<div>Coupon Discount</div>
							{{#if order.discount}}
							<div><strong> Rs.{{order.discount }}</strong></div>
							{{else}}
							<div><strong> 0</strong></div>
							{{/if}}
						</div>
						<div class="order-col">
							<div>Shipping</div>
							<div><strong>Rs.{{order.shipping}}</strong></div>
						</div>

						<div class="order-col">
							<div><strong>TOTAL</strong></div>
							<div><strong class="order-total" id="grandTotal">Rs.{{order.totalPrice}}</strong>
							</div>
						</div>
						<div class="order-col">
							<div><strong>Payment Method</strong></div>
							<div><strong>{{order.PaymentMethod}}</strong>
							</div>
						</div>
						<div class="order-col">
							<div><strong>Orderd Address:</strong></div>
							<div>
								<strong>{{order.paymentAddress.name}},
									{{order.paymentAddress.address}}<br>
									{{order.paymentAddress.city}},
									{{order.paymentAddress.state}}<br>
									{{order.paymentAddress.pinCode}}<br>
									{{order.paymentAddress.mobile}}</strong>
							</div>
						</div>


						
				</div>
				<!-- /container -->
			</div>
		</div>
		<div style="margin-top: 20px;">
		<div class="progress">
			
		
 {{#if (eq order.orderStatus 'shipped')}}
   <div class="progress-bar " role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:40%">
  Shipped
  {{else if (eq order.orderStatus 'placed')}}
  <div class="progress-bar " role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:20%">
  Placed

  {{else if (eq order.orderStatus 'arriving')}}
  <div class="progress-bar " role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:70%">
  Arriving
 {{else if (eq order.orderStatus 'delivered')}}
 <div class="progress-bar " role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:100%">
  Delivered
  {{else}}
  <div class="progress-bar " role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style= "background-color: #d11204;width:100%">
  
  order is cancelled
  


    {{/if}}
	
	
  </div>
</div>
</div>

		
</div>

	
</div>
	</div>
</div>



