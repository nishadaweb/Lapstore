<link rel="stylesheet" href="/user-assets/css/profile.css">
<div class="container">
	<div class="col-md-12">
		<div class="col-md-4">
			
			
		<div class="col-md-12">
			<div class="portlet light bordered">
				<div class="portlet-title tabbable-line">
					<div class="caption caption-md">
						<i class="icon-globe theme-font hide"></i>
						<span class="caption-subject font-blue-madison bold uppercase">Edit info</span>
					</div>
				</div>
				<div class="portlet-body">
					<div>

						<!-- Nav tabs -->
						

						<!-- Tab panes -->
						<div class="tab-content">
							<div role="tabpanel" class="tab-pane active" id="home">
								<form id="useredit" action="/edit-profile" method="post">
									<div class="form-group ">
                     <input type="text" name="id" hidden value="{{userData._id}}" id="">
										<label for="inputName">First Name</label>
										<input type="text" name="fname"  class="form-control" id="inputName" placeholder="Name" value="{{userData.fname}}">
									</div>
									<div class="form-group">
										<label for="inputLastName">Last Name</label>
										<input type="text" name="name" class="form-control" id="inputLastName"
											placeholder="Last Name"value="{{userData.lname}}">
									</div>
									<div class="form-group">
										<label for="exampleInputEmail1">Email address</label>
										<input type="email" name="email" class="form-control" id="exampleInputEmail1"
										placeholder="Email"value="{{userData.email}}">
									</div>
									
									<button class="btn btn-danger view-button" type="submit">Save Profile</button>
									
									{{!-- <button type="submit" class="btn btn-danger">Edit Profile</button> --}}
								</form>
							</div>
							<div role="tabpanel" class="tab-pane" id="profile">Profile</div>
							<div role="tabpanel" class="tab-pane" id="messages">Messages</div>
							<div role="tabpanel" class="tab-pane" id="settings">Settings</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>









































